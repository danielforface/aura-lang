{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Aura",
  "scopeName": "source.aura",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.aura",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.aura",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.aura",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.aura",
              "match": "\\\\(n|t|r|\\\\|\")"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.aura",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.aura",
          "match": "\\b(cell|val|mut|extern|type|yield|if|else|while|invariant|strand)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.aura",
          "match": "(~>|->|::|==|!=|<=|>=|&&|\\|\\||[=<>+\\-*/!.,])"
        }
      ]
    }
  }
}
