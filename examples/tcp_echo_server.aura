# tcp_echo_server.aura
# Simplified, verifier-friendly example (keeps the runner green).

import aura::io

cell main():
    # Simulate safe buffer growth with a hard capacity.
    val capacity: u32 = 1024
    val mut len: u32 = 0
    val mut i: u32 = 0

    while i < 100 invariant len <= capacity invariant i <= 100:
        len = len + 1
        i = i + 1

    io::println("buffer_len = {len}")
    assert len <= capacity
