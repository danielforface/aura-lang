# Demonstrates verification constructs (contracts, invariants, decreases, quantifiers).

cell sum_to(n: u32) ->:
    requires n <= 10

    val mut i: u32 = 0
    val mut acc: u32 = 0

    while i < n invariant i <= n decreases n - i:
        acc = acc + i
        i = i + 1

    assert i == n

    # Quantifiers are accepted only under `--smt-profile thorough`.
    assert forall(x: u32): x == x

    yield acc
