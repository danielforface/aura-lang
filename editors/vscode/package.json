{
  "name": "aura-vscode",
  "displayName": "Aura Sentinel",
  "description": "Aura Sentinel: Aura language support with live Z3 diagnostics via aura-lsp.",
  "version": "0.2.0",
  "publisher": "aura",
  "activationEvents": [
    "onLanguage:aura",
    "onCommand:aura.runActiveFile",
    "onCommand:aura.openRepl",
    "onCommand:aura.showProofs"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "aura",
        "aliases": ["Aura", "aura"],
        "extensions": [".aura"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "aura",
        "scopeName": "source.aura",
        "path": "./syntaxes/aura.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "aura",
        "path": "./snippets/aura.json"
      }
    ],
    "commands": [
      {
        "command": "aura.runActiveFile",
        "title": "Aura: Run Active File"
      },
      {
        "command": "aura.openRepl",
        "title": "Aura Sentinel: Open REPL"
      },
      {
        "command": "aura.showProofs",
        "title": "Aura Sentinel: Show Proofs"
      },
      {
        "command": "aura.exportProofs",
        "title": "Aura Sentinel: Export Proofs (JSON)"
      },
      {
        "command": "aura.restartLSP",
        "title": "Aura Sentinel: Restart Language Server"
      },
      {
        "command": "aura.clearProofCache",
        "title": "Aura Sentinel: Clear Proof Cache"
      },
      {
        "command": "aura.toggleProofDebug",
        "title": "Aura Sentinel: Toggle Debug Output"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "auraNexusPlugins",
          "name": "Nexus Plugins"
        }
      ]
    },
    "configuration": {
      "title": "Aura Sentinel",
      "properties": {
        "aura.cargoPath": {
          "type": "string",
          "default": "",
          "description": "Optional path to cargo executable (e.g. C:/Users/<you>/.cargo/bin/cargo.exe). If empty, the extension will try to auto-detect."
        },
        "aura.auraPath": {
          "type": "string",
          "default": "",
          "description": "Optional path to aura compiler executable. If empty, the extension will try to run via cargo."        },
        "aura.proofDebounce": {
          "type": "number",
          "default": 500,
          "description": "Milliseconds to wait before re-running proofs on file change (improves responsiveness)."
        },
        "aura.proofProfile": {
          "type": "string",
          "enum": ["fast", "thorough"],
          "default": "fast",
          "description": "Proof profile: 'fast' for interactive loops, 'thorough' for deep verification."
        },
        "aura.enableDebugOutput": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose debug output for LSP communication and proof runs."
        },
        "aura.trustCoreReport": {
          "type": "boolean",
          "default": true,
          "description": "Include trusted core report in diagnostics (shows module verification scope)."        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p .",
    "package:vsix": "npm run build && npx --yes @vscode/vsce package --allow-missing-repository --skip-license -o ../../dist/aura-sentinel.vsix",
    "watch": "tsc -p . -w",
    "lint": "node -e \"console.log('no lint configured')\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vscode/vsce": "^3.6.2",
    "typescript": "^5.0.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
